<!-- Shared toast node -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div
    id="toast-node"
    class="toast align-items-center bg-error bg-primary border-0"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="d-flex align-items-center gap-1 py-2 m-2 ms-3">
      <span class="toast-icon-wrapper bg-white"
        ><i class="bi-exclamation text-primary" id="toast-icon"></i
      ></span>
      <div class="toast-body text-white" id="toast-body">
        Hello, world! This is a toast message.
      </div>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>
